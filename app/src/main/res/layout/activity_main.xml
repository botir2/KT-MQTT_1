<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switch4"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/switch1"
        android:layout_alignTop="@+id/simpleSwitch4"
        android:background="@drawable/on_off_light"
        android:switchPadding="@android:dimen/thumbnail_height"
        android:text="Switch"
        android:textOff=""
        android:textOn=""
        android:thumb="?attr/actionBarDivider" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/switch1"
        android:layout_alignTop="@+id/simpleSwitch3"
        android:background="@drawable/on_off_light"
        android:switchPadding="@android:dimen/thumbnail_height"
        android:text="Switch"
        android:textOff=""
        android:textOn=""
        android:thumb="?attr/actionBarDivider" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/switch1"
        android:layout_alignTop="@+id/simpleSwitch2"
        android:background="@drawable/on_off_light"
        android:switchPadding="@android:dimen/thumbnail_height"
        android:text="Switch"
        android:textOff=""
        android:textOn=""
        android:thumb="?attr/actionBarDivider" />

    <Switch
        android:id="@+id/simpleSwitch4"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/simpleSwitch1"
        android:layout_marginBottom="125dp"
        android:background="@drawable/toggle_switch"
        android:switchPadding="@android:dimen/thumbnail_height"
        android:textOff=""
        android:textOn=""
        android:thumb="?attr/actionBarDivider" />

    <Switch
        android:id="@+id/simpleSwitch3"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/simpleSwitch1"
        android:layout_marginBottom="176dp"
        android:background="@drawable/toggle_switch"
        android:switchPadding="@android:dimen/thumbnail_height"
        android:textOff=""
        android:textOn=""
        android:thumb="?attr/actionBarDivider" />

    <Switch
        android:id="@+id/simpleSwitch2"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:background="@drawable/toggle_switch"
        android:switchPadding="@android:dimen/thumbnail_height"
        android:textOff=""
        android:textOn=""
        android:thumb="?attr/actionBarDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <Switch
        android:id="@+id/simpleSwitch1"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/simpleSwitch2"
        android:layout_marginTop="179dp"
        android:background="@drawable/toggle_switch"
        android:switchPadding="@android:dimen/thumbnail_height"
        android:textOff=""
        android:textOn=""
        android:thumb="?attr/actionBarDivider" />

    <TextView
        android:id="@+id/Textview"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="-45dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/switch1"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/subtext"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Textview"
        android:layout_marginTop="14dp"
        android:visibility="invisible"
        android:text="  "
        android:textColor="@android:color/white" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/simpleSwitch1"
        android:layout_marginEnd="45dp"
        android:background="@drawable/on_off_light"
        android:switchPadding="@android:dimen/thumbnail_height"
        android:text="Switch"
        android:textOff=""
        android:textOn=""
        android:thumb="?attr/actionBarDivider" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="173dp"
        android:layout_height="118dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_toStartOf="@+id/switch4"
        app:srcCompat="@drawable/kt" />

</RelativeLayout>